menu "Only HC12 Main Configuration"

config TIMEOUT
    int "Timeout (in milliseconds)"
range 1000 15000
    default 3500
	help
		Timeout for switching off leds after notifying sucess/failure.

config ON_COMMAND_LENGTH
    int "Duration of Commands (in milliseconds)"
range 500 2000
    default 550
	help
		Duration of Commands active status (in milliseconds).

config NUM_PRES_BLINKS
    int "Number of presentation blinks"
	default 3
	help
		Number of blinks at start_up.

endmenu